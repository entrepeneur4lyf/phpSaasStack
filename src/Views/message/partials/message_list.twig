{% for message in messages %}
    <sl-card class="message-card">
        <strong slot="header">{{ message.subject }}</strong>
        <div>
            <p>From: {{ message.sender_name }}</p>
            <p>Date: {{ message.created_at|date("F j, Y, g:i a") }}</p>
        </div>
        <sl-button slot="footer" hx-get="/messages/view/{{ message.id }}" hx-target="#message-content">
            View Message
        </sl-button>
    </sl-card>
{% endfor %}
